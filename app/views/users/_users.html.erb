<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.image? %>
        <img class="mr-2 rounded" src="<%= user.image.thumb100 %>" alt="">
        <% else %>
        <%= image_tag "unknown_user_100.jpg", class:"rounded img-fluid" %>
        <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <%= user.profile.truncate(100) %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>