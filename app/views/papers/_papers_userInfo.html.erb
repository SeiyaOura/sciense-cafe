<ul class="list-unstyled">
  <% papers.each do |paper| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= paper.user.image.thumb100 %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to paper.user.name, user_path(paper.user) %> <span class="text-muted">posted at <%= paper.created_at %></span>
        </div>
        <div>
          <strong><%= paper.title %></strong><br>
          <p>
            <%= paper.comment.truncate(100) %><br>
            comments: <%= paper.reviews.count %>
          </p>
          <%= link_to "detail", paper, class: 'btn btn-info btn-sm' %>
          <% if current_user == paper.user %>
            <%= link_to "Delete", paper, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <%= link_to "Edit", edit_paper_path(paper), class: 'btn btn-warning btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate papers %>
</ul>