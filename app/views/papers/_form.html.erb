<div class="row">
  <div class="col-sm-6 offset-sm-3 text-left">

    <%= form_with(model: @paper, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :title, 'Paper title (required)' %>
        <%= f.text_field :title , class: 'form-control', placeholder: 'Paper title' %>
      </div>
      
      <div class="form-group">
        <%= f.label :author, 'Author (required)' %>
        <%= f.text_field :author, class: 'form-control', placeholder: '.... et al.'%>
      </div>
      
      <div class="form-group">
        <%= f.label :bibliography, 'Bibliography (required)' %>
        <%= f.text_field :bibliography, class: 'form-control', placeholder:'Nature.YYYYMMDD;volume(issue):page.'  %>
      </div>
      
      <div class="form-group">
        <%= f.label :link, 'Link' %>
        <%= f.text_field :link, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :comment, 'Comment' %>
        <%= f.text_area :comment, class: 'form-control', rows: 10 %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'Image' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      
      <%= f.submit "#{btn_name}", class: 'btn btn-primary btn-block' %>
    
    <% end %>
  </div>
</div>